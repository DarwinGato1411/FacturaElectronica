            <tabs >
                <tab label="NOTA DE CREDITO" sclass="menutabs"/>
            </tabs>
            <tabpanels >
                <tabpanel  height="100%" width="98%"  >
                    <div class="container-fluid">
                        <div class="row ">
                            <div class="col-12 col-sm-12 col-md-1 col-lg-1 " align="center">
                                
                               
                                 
